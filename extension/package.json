{
  "devDependencies": {
    "concurrently": "^7.4.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "build": "tsc && tailwindcss -i ./input.css -o ./dist/output.css --minify",
    "watch": "concurrently \"tailwindcss -i ./input.css -o ./dist/output.css --watch\" \"tsc -w\""
  }
}
